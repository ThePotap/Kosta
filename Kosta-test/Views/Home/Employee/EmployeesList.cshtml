@model IEnumerable<Kosta_test.Models.Employee>
@{
	Layout = "_Layout";
}
@section Scripts{
	<script src="~/js/site.js"></script>
}
<!DOCTYPE html>
<html>
	<head>
		<title>КОСТА</title>
	</head>
	<body>
		<form method="post">
			<h1>Сотрудники отдела: @ViewData["Department"]</h1>
			<input type="hidden" name="depID" value="@ViewData["DepartmentID"]"/>
			<input id="selectedEmp" type="hidden" name="empID"/>
			<table>
				<tr>
					<th>Фамилия</th>
					<th>Имя</th>
					<th>Отчетство</th>
					<th>Должность</th>
				</tr>
			@foreach(var employee in Model)
			{
				<tr>
					<td>@employee.SurName</td>
					<td>@employee.FirstName</td>
					<td>@employee.Patronymic</td>
					<td>@employee.Position</td>
					<td>
						<input type="submit" value="Подробнее" onclick="ChangeSelectedEmployee(@employee.ID)" formaction="/Home/ReadEmployee" />
						<input type="submit" value="Удалить" onclick="return ConfirmDeletingEmployee(@employee.ID)" formaction="/Home/DeleteEmployee" />
					</td>
				</tr>
			}
			</table>
			<br>
			<input type="submit" value="Добавить сотрудника" formaction="/Home/CreateEmployee">			
		</form>
		
		<form method="get">
			<input type="submit" value="Назад" formaction="/Home/Index" />
		</form>
</body>
</html>